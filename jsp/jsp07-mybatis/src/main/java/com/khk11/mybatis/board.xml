<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.khk11.mybatis">
 <select id="getAllReplyboard" resultType="com.khk11.dto.BoardDto">
	select * from replyboard 
</select>
<select id="getSelectOne" parameterType="int"  resultType="com.khk11.dto.BoardDto">
	select * from replyboard where no = #{no}
</select>
<select id="numSelect" parameterType="int" resultType="com.khk11.dto.BoardDto">
	select * from(select rownum as num, r.* from (select * from replyboard order by regroup desc ,relevel asc)r) where num = #{num}
</select>

</mapper>
